@model AUPPRB.Models.DomainModels.Discipline
@{
    Layout = null;
}


@Html.HiddenFor(x=>x.Id)
<div class="form-group" style="display: flex">
    @Html.Label("Полное название", new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "FullName", placeholder = "Введите полное название дисциплины...", autofocus=true })
    </div>
</div>

<div class="form-group" style="display: flex">
    @Html.Label( "Краткое название", new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(x=>x.ShortName, new { @class = "form-control", id = "ShortName", placeholder = "Введите краткое название дисциплины..." })
    </div>
</div>

<div class="form-group" style="display: flex">
    @Html.Label("Активировать", new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.CheckBoxFor(x => x.IsActive, new {id = "IsActive"})
    </div>
</div>

