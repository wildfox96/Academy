@using AUPPRB.Common.Utils.Web
@model AUPPRB.Models.ViewModels.Dictionary.DictionaryItemViewModel

@{ Layout = null;}

<tr id="@Model.Id" class="editorRow">
    @using (Html.BeginCollectionItem("DictionaryItems"))
    {
        <td>
            @Html.HiddenFor(c => c.Id)
            @Html.TextBoxFor(c => c.Name, new { placeholder = "----Введите термин----" })
        </td>
    }
    <td>

        <div align="center" style="float: left">
            <a style="float:left;display: block; margin: 0 auto; cursor: pointer" title="Убрать термин" class="btn btn-default deleteRow"><span class="glyphicon glyphicon-trash"></span></a>
        </div>


    </td>
</tr>
